<UserControl x:Class="WPFTests.tests._ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFTests.tests"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="200" >
    <Grid Margin="20">
        <StackPanel>
            <ProgressBar Margin="20" Minimum="0" Maximum="100" Value="75" Name="pbStatus" />
            <ProgressBar Minimum="0" Maximum="100" Name="pbStatus2" IsIndeterminate="True" />
        </StackPanel>
    </Grid>
</UserControl>
